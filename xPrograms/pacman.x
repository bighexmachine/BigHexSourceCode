val framebuff = #7FF0;

proc main() is
  var a;
  var b;
  var c;
{
  a := [ #b0000111110000000
       , #b0011111110000000
       , #b0111111000000000
       , #b0111110000000000
       , #b1111100000000000
       , #b1111000000000000
       , #b1110000000000000
       , #b1111000000000000
       , #b1111100000000000
       , #b0111110000000000
       , #b0111111111100000
       , #b0011111111000000
       , #b0000111100000000
       ];

  b := [ #b0000111100000000
       , #b0011111111000000
       , #b0111111111100000
       , #b0111111111100000
       , #b1111111110000000
       , #b1111110000000000
       , #b1110000000000000
       , #b1111110000000000
       , #b1111111110000000
       , #b0111111111100000
       , #b0111111111100000
       , #b0011111111000000
       , #b0000111100000000
       ];

  c := [ #b0000111100000000
        ,#b0011111111000000
        ,#b0111111111100000
        ,#b0111111111100000
        ,#b1111111111110000
        ,#b1111111111110000
        ,#b1111111111110000
        ,#b1111111111110000
        ,#b1111111111110000
        ,#b0111111111100000
        ,#b0111111111100000
        ,#b0011111111000000
        ,#b0000111100000000
        ];

  clear();
  while true do
  {
    delay();
    displayBitmap(a)
  }
}

proc clear() is
  var n;
{
  n := 0;
  while n < 16 do
  {
    framebuff[n] := 0;
    n := n + 1
  }
}

proc displayBitmap(s) is
{
  copyImage(s);
  delay()
}


proc copyImage(s) is
  var n;
{
  n := 0;
  while n < 13 do
  {
    framebuff[14-n] := s[n];
    n := n + 1
  }
}

proc delay() is
  var n;
{ n := 0;
  while n < 10 do n := n + 1
}
